                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Pane prefHeight="30.0" prefWidth="100.0" />
                        <Button fx:id="quitButton" mnemonicParsing="false" onAction="#returnToMain" text="Quit" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
