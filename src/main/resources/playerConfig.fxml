                    <children>
                        <RadioButton mnemonicParsing="false" text="Yellow" GridPane.columnIndex="1">
                            <toggleGroup>
                                <ToggleGroup fx:id="colorChoice" />
                            </toggleGroup></RadioButton>
                        <RadioButton mnemonicParsing="false" selected="true" text="Red" toggleGroup="$colorChoice" />
